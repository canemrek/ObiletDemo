@model IEnumerable<ObiletDemo.Domain.OBiletApiModels.ResponseModels.BusJournyeMain>
<div class="container pb-2" style="padding-top:20px;">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 list-col">
                <div class="row justify-content-center align-items-center">
                    <div class="col-8">
                        <div class="row pl-2 pb-2">
                            <div class="col-3 pr-2 pl-2  text-center">
                                <label class="list-items-label text-center">@Resource.Web_List_Departure</label>
                                <span class="list-items-hour-label">@item.journey.departure.ToString("HH:mm")</span>
                            </div>
                            <div class="col-2 text-center">
                                <label style="color: #f5f5f5">-</label>
                                <div><i class="fa fa-long-arrow-alt-right" style="color: #192289"></i></div>
                            </div>
                            <div class="col-3 pr-2 pl-2 text-center">
                                <label class="list-items-label text-center">@Resource.Web_List_Arrival</label>
                                <span class="list-items-hour-label">@item.journey.arrival.ToString("HH:mm")</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 text-right">
                        <button class="btn btn-danger price"> @item.journey.originalprice.ToString("0.00") TL</button>
                    </div>

                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="list-directions-text">@item.journey.origin - @item.journey.destination</div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
